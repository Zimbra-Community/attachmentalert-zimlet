<zimlet name="tk_barrydegraaff_attachmentalert" version="0.6" label="${msg.label}" description="${msg.description}" target="main compose-window">
	<include>tk_barrydegraaff_attachmentalert.js</include>
	<handlerObject>tk_barrydegraaff_attachalert_HandlerObject</handlerObject>
  <zimletPanelItem label="${msg.label}" icon="Attachment">
    <toolTipText>${msg.description}</toolTipText>
	</zimletPanelItem>
	<userProperties>
      <property type="string" label="Comma separated list of keywords" name="AttachmentAlertKeywords" rows="1"/>
	</userProperties>
</zimlet>
